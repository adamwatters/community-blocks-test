        "code" : "<script>\n\ntext = \"{{TEXT}}\";\nspeed = 100;\ndirection = \"{{DIRECTION}}\";\nbackgroundColor = \"\";\ntextSize = 16;\ntextColor = \"{{TEXT_COLOR}}\";\nfontFamily = \"monospace\";\n\n<\/script>\n<style>\n  *,\n  *:before,\n  *:after {\n    box-sizing: border-box;\n  }\n  html {\n    box-sizing: border-box;\n    position: absolute;\n    top: 0;\n    right: 0;\n    bottom: 0;\n    left: 0;\n  }\n  body {\n    margin: 0;\n    position: absolute;\n    top: 0;\n    right: 0;\n    bottom: 0;\n    left: 0;\n  }\n  #root {\n    opacity: 1;\n    overflow: hidden;\n    font-size: 40px;\n    position: absolute;\n    top: 0;\n    right: 0;\n    bottom: 0;\n    left: 0;\n    display: flex;\n    align-items: center;\n  }\n  #root.hidden {\n    opacity: 0;\n  }\n  .message {\n    position: absolute;\n    white-space: nowrap;\n  }\n<\/style>\n\n<div class=\"hidden\" id=\"root\"><\/div>\n\n<script type=\"text\/javascript\">\n  document.addEventListener(\"DOMContentLoaded\", function() {\n    var root = document.getElementById(\"root\");\n    var message = document.createElement(\"div\");\n    var direction = window.direction === \"left\" ? \"left\" : \"right\";\n    var opposite = window.direction === \"left\" ? \"right\" : \"left\";\n\n    message.classList.add(\"message\");\n    var rawText =\n      text || \"You should change the text at the top of the code block\";\n    var messageText =\n      direction === \"right\"\n        ? rawText\n            .split(\" \")\n            .reverse()\n            .join(\" \")\n        : rawText;\n    message.innerHTML = messageText;\n    root.appendChild(message);\n\n    var offset = 0;\n    const leftLoop = () => {\n      if (offset % 100 === 0 && message.getBoundingClientRect().right < 0) {\n        offset = 0;\n      } else {\n        offset = offset + 1;\n      }\n      message.style.left = `calc(100% - ${offset}px)`;\n      setTimeout(() => {\n        leftLoop();\n      }, 100 \/ parseInt(speed, 10));\n    };\n    const rightLoop = () => {\n      if (\n        offset % 100 === 0 &&\n        message.getBoundingClientRect().left >\n          root.getBoundingClientRect().width\n      ) {\n        offset = 0;\n      } else {\n        offset = offset + 1;\n      }\n      message.style.right = `calc(100% - ${offset}px)`;\n      setTimeout(() => {\n        rightLoop();\n      }, 100 \/ parseInt(speed, 10));\n    };\n    if (direction === \"right\") {\n      rightLoop();\n    } else {\n      leftLoop();\n    }\n    setTimeout(() => {}, 1000);\n    var style = document.createElement(\"style\");\n    style.innerHTML = `\n      #root {\n        font-family: ${window.fontFamily};\n        font-size: ${Number(window.textSize) || 16}vw;\n        color: ${window.textColor || \"pink\"};\n        background-color: ${backgroundColor || \"rgba(0,0,0,0)\"}\n      }\n    `;\n    document.head.appendChild(style);\n    \/\/ everything is in place, show the codeblock\n    document.getElementById(\"root\").classList.remove(\"hidden\");\n  });\n<\/script>",
